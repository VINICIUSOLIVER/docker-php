server {
    listen 80;
    server_name localhost;

    root /var/www;
    index index.php index.html index.htm;

    location /softcomshop/public {
        try_files $uri $uri/ /softcomshop/public/index.php$is_args$args;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php7.3-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}
